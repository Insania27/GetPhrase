<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileSettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profSetLayout"
            android:layout_width="360dp"
            android:layout_height="180dp"
            android:layout_marginStart="46dp"
            android:layout_marginTop="111dp"
            android:layout_marginEnd="46dp"
            android:layout_marginBottom="246dp"
            android:background="@drawable/profile_layout_border"
            android:backgroundTint="#7DFBAF"
            android:foregroundTint="#3F51B5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.523"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/nameText"
                android:layout_width="68dp"
                android:layout_height="27dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="44dp"
                android:text="Имя"
                android:textColor="#000000"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/surnameText"
                android:layout_width="91dp"
                android:layout_height="29dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="32dp"
                android:text="Фамилия"
                android:textColor="#000000"
                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="33dp"
                android:backgroundTint="#908F8F"
                android:ems="10"
                android:hint="Введите имя"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:textColorHint="#686868"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/surnameEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="33dp"
                android:layout_marginBottom="33dp"
                android:backgroundTint="#908F8F"
                android:ems="10"
                android:hint="Введите фамилию"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHint="#686868"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/profileDataText"
            android:layout_width="215dp"
            android:layout_height="21dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="80dp"
            android:text="Данные профиля"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#686767"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/infoSaveButton"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="145dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="145dp"
            android:backgroundTint="#3972F6"
            android:text="Сохранить"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profSetLayout" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>